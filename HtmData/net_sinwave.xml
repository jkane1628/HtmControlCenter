	</InputSpace>
	<Region id="Region1">
		<SizeX>24</SizeX>
		<SizeY>24</SizeY>
		<HardcodedSpatial>false</HardcodedSpatial>
		<Boost rate="0.01" max="5"></Boost>
		<SpatialLearningPeriod start="-1" end="-1"></SpatialLearningPeriod>
		<TemporalLearningPeriod start="1000" end="-1"></TemporalLearningPeriod>
		<BoostingPeriod start="-1" end="1000"></BoostingPeriod>
		<MinOverlapToReuseSegment min="3" max="3"></MinOverlapToReuseSegment>
		<PercentageInputPerCol>50</PercentageInputPerCol>
		<PercentageMinOverlap>5</PercentageMinOverlap>
		<PercentageLocalActivity>3</PercentageLocalActivity>
		<PredictionRadius>10</PredictionRadius>
		<CellsPerColumn>5</CellsPerColumn>
		<SegmentActivateThreshold>4</SegmentActivateThreshold>
		<NewNumberSynapses>8</NewNumberSynapses>
		<OutputColumnActivity>false</OutputColumnActivity>
		<OutputCellActivity>true</OutputCellActivity>
		<Inputs>
			<Input id="Input1" radius="8"></Input>
		</Inputs>
	</Region>
  <Classifier id="InputClassifier" inputspace="Input1" region="Region1" numitems="100"></Classifier>
</NetConfig>
